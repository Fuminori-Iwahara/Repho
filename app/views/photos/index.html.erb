<div class="contents row" >
    <% @photos.each do |photo| %>
      <div class="content_post" style="background-image: url(<%= photo.image %>);">
        <% if user_signed_in? && current_user.id == photo.user_id %>
         <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '削除',"/photos/#{photo.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(photo.comment) %>
        <span class="title">
         <a href="">
           <span>投稿者</span><%= photo.user.nickname %>
         </a>
       </span>
      </div>
    <% end %>
    <%= paginate(@photos) %>
  </div>